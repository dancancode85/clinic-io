{
  "name": "clinic-io",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev:api": "pnpm --filter api dev",
    "dev:mobile": "pnpm --filter mobile start",
    "db:up": "docker compose --env-file .env -f docker/docker-compose.yml up -d",
    "db:down": "docker compose --env-file .env -f docker/docker-compose.yml down",
    "db:reset": "docker compose --env-file .env -f docker/docker-compose.yml down -v && docker compose --env-file .env -f docker/docker-compose.yml up -d"
  },
  "engines": {
    "node": ">=18"
  }
}